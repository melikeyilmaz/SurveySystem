@model List<SurveySystem.Models.SurveyScore>
@{
    ViewData["Title"] = "SurveyDetails";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Skor Tablosunun Detayları</h4>
            <div class="table-responsive pt-3">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Ad</th>
                            <th>Soyad</th>
                            <th>Doğru Cevap Sayısı</th>
                            <th>Yanlış Cevap Sayısı</th>
                            <th>Toplam Puan</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var score in Model)
                        {
                            <tr>
                                <td>@score.FirstName</td>
                                <td>@score.LastName</td>
                                <td>@score.CorrectAnswers</td> <!-- Doğru cevap sayısı -->
                                <td>@score.IncorrectAnswers</td> <!-- Yanlış cevap sayısı -->
                                <td>@score.Score</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>          
        </div>
    </div>
</div>