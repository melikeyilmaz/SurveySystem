@model SurveySystem.Models.UserCreateModel
@{    
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form asp-action="Create" method="post" class="p*3 w-75 mx-auto shadow">

    <div class="text-danger mt-2" asp-validation-summary="ModelOnly"></div>
    <div class="mb-3">
        <label asp-for="UserName">Kullanıcı Ad:</label>
        <input asp-for="UserName" />
        <span asp-validation-for="UserName" class="text-danger"></span>
    </div>

   @*  <div class="mb-3">
        <label asp-for="LastName">Kullanıcı Soyad:</label>
        <input asp-for="LastName" />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div> *@

    <div class="mb-3">
        <label asp-for="Email">Email</label>
        <input asp-for="Email" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Password">Şifre </label>
        <input type="password" asp-for="Password" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="ConfirmPassword">Şifre Tekrar</label>
        <input type="password" asp-for="ConfirmPassword" />
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>

    <div class="mb-3">
       <button type="submit" class="btn btn-primary">Kaydet</button>
    </div>

</form> 