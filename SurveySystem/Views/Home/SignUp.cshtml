@model SurveySystem.Models.UserCreateModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
@await Html.PartialAsync("/Views/Shared/_HeadPartial.cshtml")
<body>
    <div class="container-scroller">
        <div class="container-fluid page-body-wrapper full-page-wrapper">
            <div class="content-wrapper d-flex align-items-stretch auth auth-img-bg">
                <div class="row flex-grow">
                    <div class="col-lg-6 d-flex align-items-center justify-content-center">
                        <div class="auth-form-transparent text-left p-3">
                            <div class="brand-logo">
                                <img src="~/webtheme/Triangle/images/surveylogo.jpg" alt="logo">
                            </div>
                            <h4>Kayıt Ol</h4>
                            <h6 class="font-weight-light">Birkaç adımda kaydınızı oluşturabilirsiniz</h6>
                            <form asp-action="SignUp" method="post" class="pt-3">
                                <div class="text-danger mt-2" asp-validation-summary="ModelOnly"></div>
                                <input type="hidden" asp-for="UserName" value="@Model.Email" />
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                                <div class="form-group">
                                    <label asp-for="FirstName">Ad</label>
                                    <div class="input-group">
                                        <div class="input-group-prepend bg-transparent">
                                            <span class="input-group-text bg-transparent border-right-0">
                                                <i class="mdi mdi-account-outline text-primary"></i>
                                            </span>
                                        </div>
                                        <input asp-for="FirstName" type="text" class="form-control form-control-lg border-left-0" placeholder="Ad">                                        
                                    </div>
                                </div>
                                <span asp-validation-for="LastName" class="text-danger"></span>
                                <div class="form-group">
                                    <label asp-for="LastName">Soyad</label>
                                    <div class="input-group">
                                        <div class="input-group-prepend bg-transparent">
                                            <span class="input-group-text bg-transparent border-right-0">
                                                <i class="mdi mdi-account-outline text-primary"></i>
                                            </span>
                                        </div>
                                        <input asp-for="LastName" type="text" class="form-control form-control-lg border-left-0" placeholder="Soyad">                                       
                                    </div>
                                </div>
                                <span asp-validation-for="Email" class="text-danger"></span>
                                <div class="form-group">
                                    <label asp-for="Email">Email</label>
                                    <div class="input-group">
                                        <div class="input-group-prepend bg-transparent">
                                            <span class="input-group-text bg-transparent border-right-0">
                                                <i class="mdi mdi-email-outline text-primary"></i>
                                            </span>
                                        </div>
                                        <input asp-for="Email" type="email" class="form-control form-control-lg border-left-0" placeholder="Email">                                      
                                    </div>
                                </div>
                                <span asp-validation-for="Password" class="text-danger"></span>
                                <div class="form-group">
                                    <label asp-for="Password">Şifre</label>
                                    <div class="input-group">
                                        <div class="input-group-prepend bg-transparent">
                                            <span class="input-group-text bg-transparent border-right-0">
                                                <i class="mdi mdi-lock-outline text-primary"></i>
                                            </span>
                                        </div>
                                        <input asp-for="Password" type="password" class="form-control form-control-lg border-left-0" placeholder="Şifre">                                       
                                    </div>
                                </div>
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                <div class="form-group">
                                    <label asp-for="ConfirmPassword">Şifre Tekrar</label>
                                    <div class="input-group">
                                        <div class="input-group-prepend bg-transparent">
                                            <span class="input-group-text bg-transparent border-right-0">
                                                <i class="mdi mdi-lock-outline text-primary"></i>
                                            </span>
                                        </div>
                                        <input asp-for="ConfirmPassword" type="password" class="form-control form-control-lg border-left-0" placeholder="Şifre Tekrar">                                       
                                    </div>
                                </div>                               
                                <div class="mt-3">
                                    <button type="submit" class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn">Kayıt Ol</button>
                                </div>
                                <div class="text-center mt-4 font-weight-light">
                                    Zaten hesabınız var mı? <a asp-area="" asp-controller="Home" asp-action="SignIn" class="text-primary">Giriş Yap</a>
                                </div>
                            </form>
                        </div>
                    </div>
                    <div class="col-lg-6 register-half-bg d-flex flex-row">
                        <p class="text-white font-weight-medium text-center flex-grow align-self-end">Copyright &copy; 2018  All rights reserved.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @await Html.PartialAsync("/Views/Shared/_ScriptPartial.cshtml")
</body>
</html>
<script>
    // JavaScript kullanarak UserName alanına değeri atayın
    document.getElementById("UserName").value = "@Model.Email";
</script>